{
  "extends": ["@vue/tsconfig/tsconfig.web.json"],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
